/*
 * qVideoCommon.inc
 * QVideoCodecPlugin
 *
 * Defines functions that are reused by "sub-plugins" of
 * (i.e. generated by subclasses of) QVideoCodecPlugin.
 * Declares API-specific functions that must be implemented
 * in the sub-plugin.
 */


#include "qVideoCommon.h"
#include "../QVideoCodecPlugin/qVideoCodecPlatformSpecific.h"


/************* API-specific public function declarations ***************/
/* "Sub-plugins" must implement this... do whatever is necessary to initialize
	the API that we are using, on our current platform. */
void qInitPlatformAndAPI();



/**************** Public (shared) function definitions ******************/

void qVideoCodecStartup(void)
{	
	qLogToFile("QVideoCodecPlugin.log");

	qInitPlatform();
	qInitEncoderStorage();
	qInitDecoderStorage();
}

void qVideoCodecShutdown(void)
{
	qDestroyAllEncoders();
	qDestroyAllDecoders();
	qShutdownPlatform();
	
	qShutdownLogging();
}



