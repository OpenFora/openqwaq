export LD_LIBRARY_PATH=${HOME}/server/third-party/lib:${HOME}/server/third-party/lib/gpac

export PATH=${OpenQwaqTooslDir}/bin:${HOME}/server/third-party/bin:${HOME}/server/third-party/bin:${PATH}
